{
  "name": "typescript-sdk-starter",
  "version": "0.0.1",
  "description": "A modern TypeScript SDK starter template",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/schoonlabs/typescript-sdk-starter.git"
  },
  "bugs": {
    "url": "https://github.com/schoonlabs/typescript-sdk-starter/issues"
  },
  "homepage": "https://github.com/schoonlabs/typescript-sdk-starter#readme",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsup",
    "postbuild": "node -e \"const fs = require('fs'); const files = ['dist/index.js', 'dist/index.cjs', 'dist/index.d.ts']; files.forEach(f => { if (!fs.existsSync(f)) throw new Error('Missing: ' + f); }); console.log('âœ“ Build verification passed');\"",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "keywords": [
    "typescript",
    "sdk",
    "starter",
    "template",
    "boilerplate",
    "library",
    "esm",
    "cjs",
    "dual-package"
  ],
  "author": "Dan Schoonmaker <dan@schoonlabs.com>",
  "license": "MIT"
}
